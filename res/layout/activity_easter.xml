<?xml version="1.0" encoding="utf-8"?>  
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/reg_tag"
            android:textSize="18sp"/>
        
        <RelativeLayout 
            android:id="@+id/reg_area"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@id/text"
			android:orientation="horizontal" >
	        <TextView 
	            android:id="@+id/text1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:minWidth="80dp"
	            android:layout_alignParentTop="true"
	            android:text="手机号码："
	            android:layout_gravity="left"
	            android:layout_marginTop="16dp"
	            android:layout_marginLeft="16dp"
	            android:layout_marginBottom="16dp"
	            android:textSize="16sp"
	            />
	        
	        <EditText 
	            android:id="@+id/phone"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="16dp"
	            android:hint="请填写您的手机号码"
	            android:layout_toRightOf="@id/text1"
	            android:layout_gravity="right"
	            android:layout_alignBaseline="@id/text1"
	            android:inputType="phone"   
	            /> 
	            
			<TextView 
	            android:id="@+id/text2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:minWidth="80dp"
	            android:layout_below="@id/text1"
	            android:text="密码："
	            android:layout_gravity="left"
	            android:layout_marginTop="16dp"
	            android:layout_marginLeft="16dp"
	            android:layout_marginBottom="16dp"
	            android:textSize="16sp"
	            />
	        
	        <EditText 
	            android:id="@+id/password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="16dp"
	            android:hint="请填写您的密码"
	            android:layout_toRightOf="@id/text2"
	            android:layout_gravity="right"
	            android:layout_alignBaseline="@id/text2"
	            android:inputType="textPassword"   
	            /> 
			<TextView 
	            android:id="@+id/text3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:minWidth="80dp"
	            android:layout_below="@id/text2"
	            android:text="昵称："
	            android:layout_gravity="left"
	            android:layout_marginTop="16dp"
	            android:layout_marginLeft="16dp"
	            android:layout_marginBottom="16dp"
	            android:textSize="16sp"
	            />
	        
	        <EditText 
	            android:id="@+id/nickname"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="16dp"
	            android:hint="请填写您的昵称"
	            android:layout_toRightOf="@id/text3"
	            android:layout_gravity="right"
	            android:layout_alignBaseline="@id/text3"
	            android:inputType="text"   
	            />
	        
        </RelativeLayout>
            
            

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:minHeight="48.0dip"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >
	            
	        <Button 
	            android:id="@+id/hangout"
	            android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:gravity="center"  
	        	android:layout_weight="1"
	        	android:text="@string/easter_hangout"/>

	        <Button
	            android:id="@+id/reg"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:gravity="center"  
	            android:layout_weight="1"
	            android:text="@string/easter_reg" />

        </LinearLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>